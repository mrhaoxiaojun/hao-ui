@import "./var.styl"

section {
  color: #3f536e;
  font-size: 14px;
  font-family "Microsoft YaHei UI"
  .demo-block{
    padding: 32px;
    border: 1px solid $color-border;
    border-radius: 4px 4px 0 0;
    background-color: #fff;
    margin-top: 16px;
  }
  hr {
    margin: 1.2em 0;
    border: 0;
    border-bottom: 2px solid #C5D9E8;
  }
  p {
    padding: 0;
    line-height: 1.7;
    color: #3f536e;
    font-size: 14px;
  }
  h1 {
    font-size: 28px;
  }
  h1,h2,h3,h4,h5{
    margin: 20px 0;
    line-height: 1.5;
    font-weight: 400;
    color: #1f2f3d;
  }
  h2 {
    font-size: 18px;
  }
  h3{
    font-size: 22px;
  }
  ul {
    margin: 16px 0;
    padding-left: 24px;
    list-style: disc;
    li {
      line-height: 1.8;
    }
  }
  pre {
    margin: 16px 0;
    padding: 16px;
    background-color: #F7F7F7;
    overflow: auto;
    code {
      font-family: Menlo,Monaco,Consolas,Courier,monospace;
      padding: 0;
      font-size: 15px;
      line-height: 1.3;
      border: none;
      border-radius: 0;
      background-color: transparent;
    }
  }
  code {
    padding: 0.3em 0.5em;
    font-size: 1em;
    font-family: Menlo, Monaco, Consolas, Courier, monospace;
    vertical-align: middle;
    border: 1px solid #ececec;
    border-radius: 3px;
    background-color: #e5e8e8;
  }
  code.code_inline {
    padding: 0 .5em;
  }
  img {
    vertical-align: middle;
  }
  p+p {
    margin-top: 8px;
  }
  a {
    color: #6190e8;
  }
  table.table {
    display: block;
    width: 100%;
    background-color: #fff;
    color: #5e6d82;
    font-size: 14px;
    border-collapse: collapse;
    overflow: auto;
    margin-bottom: 50px;
    th {
      border-top: 1px solid #f3f7fa;
      background-color: #FAFBFC;
      border-bottom: 1px solid #f3f7fa;
      padding: 10px 8px;
    }
    td{
      border-top: 1px solid #f3f7fa;
      border-bottom: 1px solid #f3f7fa;
      padding: 10px 8px;
    }
  }
}
